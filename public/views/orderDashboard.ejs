<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- <link rel="stylesheet" href="../styles/main.css" /> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="../styles/orderDashboard.css" />
    <title>Order Dashboard</title>
  </head>
  <body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
      <button class="navbar-toggler ms-3" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto px-3">
          <li class="nav-item active">
            <a href="/orderDashboard" class="nav-link">Orders</a>
          </li>
          <li class="nav-item">
            <a href="/orderDashboard/products" class="nav-link">Products</a>
          </li>
          <li class="nav-item">
            <a href="/orderDashboard/hampers" class="nav-link">Hampers</a>
          </li>
          <li class="nav-item">
            <a href="/orderDashboard/customers" class="nav-link">Customers</a>
          </li>
        </ul>
      </div>
      <button class="btn btn-light mx-3" onclick="redirect('/logout')">Logout</button>
    </nav>

    <!-- Title -->
    <h1 class="w-100 text-center mt-5 mb-4">Order Dashboard</h1>

    <!-- Add Order Button Container -->
    <div class="container mt-4 d-flex justify-content-center ">
      <button class="btn btn-primary text-center px-5" onclick="redirect('/addOrder')">Add Order</button>
    </div>

    <!-- Page Selector -->
    <% if(totalPages > 1) { %>
    <div class="container mx-auto mt-3 w-md-75">
      <nav aria-label="Page navigation" class="mx-auto">
        <ul class="pagination justify-content-center ">
          <% if(page > 1) { %>
          <li class="page-item"><a class="page-link" href="?page=<%= page-1 %>">Previous</a></li>
          <% } %>
          <% for(let i=0; i<totalPages; i++) { %>
          <li class="page-item"><a class="page-link" href="?page=<%= i+1 %>"><%= i+1 %></a></li>
          <% } %>
          <% if(page < totalPages) { %>
          <li class="page-item"><a class="page-link" href="?page=<%= page+1 %>">Next</a></li>
          <% } %>
        </ul>
      </nav>
    </div>
    <% } %>

    <!-- Order Container -->
    <div class="container mt-4 w-md-75 mb-5">
      
      <div class="accordion w-sm-100 w-md-100 w-lg-100 w-xl-75 mx-auto" id="accordionExample">
        <% slicedData.forEach(order => { %>
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingOne">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapse<%= order._id %>"
              aria-expanded="true"
              aria-controls="collapse<%= order._id %>"
            >
              Order by <%= order.customerName%> due on <%= order.deliveryDate %>
            </button>
          </h2>
          <div
            id="collapse<%= order._id %>"
            class="accordion-collapse collapse"
            aria-labelledby="headingOne"
            data-bs-parent="#accordionExample"
          >
            <div class="accordion-body position-relative">
              <div class="container button-container-1">
                <button 
                  class="btn btn-primary order-button btn-sm position-sticky end-0" 
                  onclick="redirect('/orderDashboard/editOrder/<%= order._id %>')"
                  >
                    <i class="fa-solid fa-pen-to-square"></i>
                </button>
                <button 
                  class="btn btn-danger order-button btn-sm position-sticky end-0"  
                  onclick="redirect('/orderDashboard/editOrder/<%= order._id %>')"
                  >
                  <i class="fa-solid fa-trash"></i>
                </button>
                <button 
                  class="btn btn-success order-button btn-sm position-sticky end-0"  
                  onclick="redirect('/orderDashboard/sendOrder/<%= order._id %>')"
                  >
                  <i class="fa-solid fa-paper-plane"></i>
                </button>
              </div>
              

              Customer Name: <%= order.customerName %> <br>
              Customer Address: <%= order.customerAddress %> <br>
              Customer Note: <%= order.customerNote %> <br> <br>

              Delivery Date: <%= order.deliveryDate %> <br>
              Order Note: <%= order.details %> <br> <br>

              <div
                class="table-responsive"
              >
                <table
                  class="table table-hover table-borderless align-middle text-start"
                >
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Price</th>
                      <th>Quantity</th>
                      <th>Subtotal</th>
                    </tr>
                  </thead>
                  <tbody class="table-group-divider">
                    <% var total = 0; %>
                    <% order.productContent.forEach(product => { %>
                      <tr>
                        <td><%= product.name %></td>
                        <% if(product.discount === 0) { %>
                          <td><%= product.priceValue %> (<%= product.priceType %>)</td>
                          <% var subtotal = product.priceValue; %>
                        <% } else { %>
                          <% var discountValue = parseInt(product.priceValue * product.discount / 100); %>
                          <% var subtotal = product.priceValue - discountValue; %>
                          <td><%= product.priceValue %> (<%= product.priceType %>) <br> -  <%= discountValue %> (<%= product.discount %>%) <br> = <%= subtotal %></td>
                        <% } %>
                        <td><%= product.quantity.$numberDecimal %></td>
                        <td>Rp<%= subtotal * product.quantity.$numberDecimal %></td>
                        <% total += subtotal * product.quantity.$numberDecimal; %>
                      </tr>
                    <% }) %>
                    <% order.hamperContent.forEach(product => { %>
                      <tr>
                        <td><%= product.name %></td>
                        <% if(product.discount === 0) { %>
                          <td><%= product.priceValue %> (<%= product.priceType %>)</td>
                          <% var subtotal = product.priceValue; %>
                        <% } else { %>
                          <% var discountValue = parseInt(product.priceValue * product.discount / 100); %>
                          <% var subtotal = product.priceValue - discountValue; %>
                          <td><%= product.priceValue %> (<%= product.priceType %>) <br> -  <%= discountValue %> (<%= product.discount %>%) <br> = <%= subtotal %></td>
                        <% } %>
                        <td><%= product.quantity.$numberDecimal %></td>
                        <td>Rp<%= subtotal * product.quantity.$numberDecimal %></td>
                        <% total += subtotal * product.quantity.$numberDecimal; %>
                      </tr>
                    <% }) %>

                    
                    <tr>
                      <td colspan="3" style="text-align: right;"><strong>Total</strong></td>
                      <td>Rp<%= total %></td>
                    </tr>

                    <% if(order.orderDiscount !== 0) { %>
                      <tr>
                        <td colspan="3" style="text-align: right;"><strong>Discount (<%= order.orderDiscount %>%)</strong></td>
                        <td>Rp<%= parseInt(order.orderDiscount * total / 100) %></td>
                      </tr>
                      <tr>
                        <td colspan="3" style="text-align: right;"><strong>Final Total</strong></td>
                        <td>Rp<%= total - parseInt(order.orderDiscount * total / 100) %></td>
                      </tr>
                    <% } %>
                  </tbody>
                  <tfoot>
                    
                  </tfoot>
                </table>
              </div>
              
              
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      
    </div>

  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <script>
    function redirect(domain) {
      window.location.href = domain
    }
  </script>
</html>
